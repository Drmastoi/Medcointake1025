    <!-- Submit -->
    <button type="button" onclick="submitForm()">📧 Send Completed Form to Clinic</button>
  </form>

  <script>
    // Show/hide conditional fields
    document.querySelectorAll('input[name="prevRTA"]').forEach(r => r.addEventListener('change', () => {
      document.getElementById('prevRTADetails').style.display = (r.value === 'Yes') ? 'block' : 'none';
    }));
    document.querySelectorAll('input[name="medHistory"]').forEach(r => r.addEventListener('change', () => {
      document.getElementById('medHistoryDetails').style.display = (r.value === 'Yes') ? 'block' : 'none';
    }));
    document.querySelectorAll('input[name="musculo"]').forEach(r => r.addEventListener('change', () => {
      document.getElementById('musculoDetails').style.display = (r.value === 'Yes') ? 'block' : 'none';
    }));
    document.querySelectorAll('input[name="treatmentAtScene"]').forEach(r => r.addEventListener('change', () => {
      document.getElementById('sceneDetails').style.display = (r.value === 'Yes') ? 'block' : 'none';
    }));
    document.querySelectorAll('input[name="emergency"]').forEach(r => r.addEventListener('change', () => {
      document.getElementById('emergencyDetails').style.display = (r.value === 'Yes') ? 'block' : 'none';
    }));

    function submitForm() {
      const f = document.getElementById;
      const getRadio = (name) => {
        const r = document.querySelector(`input[name="${name}"]:checked`);
        return r ? r.value : '';
      };
      const getCheckboxes = (name) => {
        return Array.from(document.querySelectorAll(`input[name="${name}"]:checked`))
          .map(cb => cb.value).join(', ');
      };

      const data = {
        name: f('name').value,
        examDate: f('examDate').value,
        accidentDate: f('accidentDate').value,
        title: getRadio('title'),
        dob: f('dob').value,
        accompaniedBy: f('accompaniedBy').value,
        proofOfId: f('proofOfId').value,

        prevRTA: getRadio('prevRTA'),
        prevRTATime: f('prevRTATime').value,
        prevRTARecovered: getRadio('prevRTARecovered'),
        prevRTAPercent: f('prevRTAPercent').value,

        medHistory: getRadio('medHistory'),
        medCondition: f('medCondition').value,
        medRecovered: getRadio('medRecovered'),
        medPercent: f('medPercent').value,

        musculo: getRadio('musculo'),
        musculoCondition: f('musculoCondition').value,
        musculoRecovered: getRadio('musculoRecovered'),
        musculoPercent: f('musculoPercent').value,

        accidentTime: getRadio('accidentTime'),
        vehicleType: getRadio('vehicleType'),
        vehicleOther: f('vehicleOther').value,
        position: getRadio('position'),
        location: getRadio('location'),
        movement: getRadio('movement'),
        airbag: getRadio('airbag'),
        otherVehicle: getRadio('otherVehicle'),
        impactSpeed: getRadio('impactSpeed'),
        impactDir: getRadio('impactDir'),
        damage: getRadio('damage'),

        treatmentAtScene: getRadio('treatmentAtScene'),
        sceneType: getCheckboxes('sceneType'),
        sceneBy: getRadio('sceneBy'),
        emergency: getRadio('emergency'),
        emergencyName: f('emergencyName').value,
        emergencyTreatment: f('emergencyTreatment').value,

        furtherTreatment: getRadio('furtherTreatment'),
        treatmentWhen: f('treatmentWhen').value,
        advised: getRadio('advised'),
        advisedOther: f('advisedOther').value,
        physio: getRadio('physio'),
        physioSessions: f('physioSessions').value,
        physioOngoing: f('physioOngoing').checked ? 'Yes' : 'No',
        investigation: getCheckboxes('investigation'),
        mriBodyPart: f('mriBodyPart').value,

        occupation: f('occupation').value,
        employment: getRadio('employment'),
        timeOff: getRadio('timeOff'),
        timeOffDuration: f('timeOffDuration').value,
        stillOff: f('stillOff').checked ? 'Yes' : 'No',
        lightDuties: getRadio('lightDuties'),
        lightDutiesDuration: f('lightDutiesDuration').value,
        stillLight: f('stillLight').checked ? 'Yes' : 'No',
        reducedHours: getRadio('reducedHours'),
        reducedHoursDuration: f('reducedHoursDuration').value,
        stillReduced: f('stillReduced').checked ? 'Yes' : 'No',
        additionalEffect: f('additionalEffect').value,

        bruisingLocation: f('bruisingLocation').value,

        neckStart: getRadio('neckStart'),
        neckWhen: getRadio('neckWhen'),
        neckCurrent: getRadio('neckCurrent'),
        neckResolved: f('neckResolved').value,
        neckPercent: f('neckPercent').value,

        upperBackStart: getRadio('upperBackStart'),
        upperBackWhen: getRadio('upperBackWhen'),
        upperBackCurrent: getRadio('upperBackCurrent'),
        upperBackResolved: f('upperBackResolved').value,
        upperBackPercent: f('upperBackPercent').value,
        upperBackPrognosis: f('upperBackPrognosis').value,

        shoulderLStart: getRadio('shoulderLStart'),
        shoulderLWhen: getRadio('shoulderLWhen'),
        shoulderLCurrent: getRadio('shoulderLCurrent'),
        shoulderLResolved: f('shoulderLResolved').value,
        shoulderLPercent: f('shoulderLPercent').value,

        shoulderRStart: getRadio('shoulderRStart'),
        shoulderRWhen: getRadio('shoulderRWhen'),
        shoulderRCurrent: getRadio('shoulderRCurrent'),
        shoulderRResolved: f('shoulderRResolved').value,
        shoulderRPercent: f('shoulderRPercent').value,

        lowerBackStart: getRadio('lowerBackStart'),
        lowerBackWhen: getRadio('lowerBackWhen'),
        lowerBackCurrent: getRadio('lowerBackCurrent'),
        lowerBackResolved: f('lowerBackResolved').value,
        lowerBackPercent: f('lowerBackPercent').value,

        headacheStart: getRadio('headacheStart'),
        headacheWhen: getRadio('headacheWhen'),
        headacheCurrent: getRadio('headacheCurrent'),
        headacheResolved: f('headacheResolved').value,
        headachePercent: f('headachePercent').value,

        anxietyDescription: f('anxietyDescription').value,
        anxietyStart: getRadio('anxietyStart'),
        anxietyWhen: getRadio('anxietyWhen'),
        anxietyCurrent: getRadio('anxietyCurrent'),
        anxietyResolved: f('anxietyResolved').value,
        anxietyPercent: f('anxietyPercent').value,

        otherInjuryDesc: f('otherInjuryDesc').value,
        otherInjuryStart: getRadio('otherInjuryStart'),
        otherInjuryWhen: getRadio('otherInjuryWhen'),
        otherInjuryCurrent: getRadio('otherInjuryCurrent'),
        otherInjuryResolved: f('otherInjuryResolved').value,
        otherInjuryPercent: f('otherInjuryPercent').value,
        otherInjuryMechanism: f('otherInjuryMechanism').value,

        liveWith: getRadio('liveWith'),
        childrenCount: f('childrenCount').value,
        domesticEffect: f('domesticEffect').value,
        sportsEffect: f('sportsEffect').value,
        otherIssue: f('otherIssue').value
      };

      let body = `Accident Claim Form Submission\n\n`;
      for (let key in data) {
        if (data[key]) {
          const label = key
            .replace(/([A-Z])/g, ' $1')
            .replace(/^./, str => str.toUpperCase())
            .replace('L T', 'Left')
            .replace('R T', 'Right');
          body += `${label}: ${data[key]}\n`;
        }
      }

      const subject = `Claim Form – ${data.name || 'Anonymous'}`;
      const email = 'drawais@gmail.com'; // ✅ YOUR EMAIL

      const mailtoLink = `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
      window.location.href = mailtoLink;
    }
  </script>
</body>
