        <label><input type="radio" name="otherInjuryWhen" value="Same Day"> Same Day</label>
        <label><input type="radio" name="otherInjuryWhen" value="Next Day"> Next Day</label>
        <label><input type="radio" name="otherInjuryWhen" value="Later"> Later</label>
      </div>
      <div class="radio-group">
        <label>Currently:</label>
        <label><input type="radio" name="otherInjuryCurrent" value="Mild"> Mild</label>
        <label><input type="radio" name="otherInjuryCurrent" value="Moderate"> Moderate</label>
