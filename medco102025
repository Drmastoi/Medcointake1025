        <input type="text" id="otherInjuryResolved" placeholder="e.g., 2 months">
      </div>
      <label>% Impact: <input type="number" id="otherInjuryPercent" min="0" max="100"></label>
      <label>Mechanism / Notes: <textarea id="otherInjuryMechanism" rows="2"></textarea></label>
    </div>

    <!-- Domestic Life -->
    <div class="section">
      <h2>Domestic & Social Impact</h2>

      <div class="radio-group">
        <label>Who do you live with?</label>
        <label><input type="radio" name="liveWith" value="Alone"> Alone</label>
        <label><input type="radio" name="liveWith" value="Spouse"> Spouse</label>
